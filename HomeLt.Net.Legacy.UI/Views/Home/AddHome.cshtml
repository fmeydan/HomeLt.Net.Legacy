@model List<HomeLt.Net.Legacy.ENTITIES.City>
@{
    ViewBag.Title = "AddHome";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    List<EnumPropertyModel> propertyTypes = HomeLt.Net.Legacy.UI.Constants.CastEnumToList.EnumList();
}
