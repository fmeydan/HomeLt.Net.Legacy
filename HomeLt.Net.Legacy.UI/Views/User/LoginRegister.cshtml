
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}




<section>
    <div class="container">
        @Html.Partial("_PartialMessage")
        <ul class="nav nav-tabs nav-tabs-02 justify-content-center" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="login-tab" data-toggle="tab" href="#login" role="tab" aria-controls="login" aria-selected="false">Log in</a>
               
            </li>
            <li class="nav-item">
                <a class="nav-link" id="register-tab" data-toggle="tab" href="#register" role="tab" aria-controls="register" aria-selected="false">Register</a>
            </li>

        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
                <form class="form-row mt-4 align-items-center" id="LoginForm" action="/User/Login" method="post">
                    <div class="form-group col-sm-12 col-md-6 offset-md-3">
                        <input type="email" class="form-control" required placeholder="Email" id="LoginUserMail" name="Email">
                    </div>
                    <div class="form-group col-sm-12 col-md-6 offset-md-3">
                        <input type="Password" class="form-control" required id="UserLoginPassword" placeholder="Password" name="Password">
                    </div>
                    <div class="col-sm-6 offset-sm-3 mb-3 ">
                        <button class="btn btn-primary btn-block" id="ButtonSignIn">Login</button>
                    </div>

                </form>
                <div class="login-social-media border pl-4 pr-4 pb-4 pt-0 rounded">
                    <div class="mb-4 d-block text-center">
                        <b class="bg-white pl-2 pr-2 mt-3 d-block">Login or Sign in with</b>
                        <a href="@Url.Action("Register","User")">Doesn't have an account? Register Now!</a>
                    </div>
                    <form class="row">
                        <div class="col-sm-6">
                            <a class="btn facebook-bg social-bg-hover d-block mb-3" href="#"><span><i class="fab fa-facebook-f"></i>Login with Facebook</span></a>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn twitter-bg social-bg-hover d-block mb-3" href="#"><span><i class="fab fa-twitter"></i>Login with Twitter</span></a>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn google-bg social-bg-hover d-block mb-3 mb-sm-0" href="#"><span><i class="fab fa-google"></i>Login with Google</span></a>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn linkedin-bg social-bg-hover d-block" href="#"><span><i class="fab fa-linkedin-in"></i>Login with Linkedin</span></a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="tab-pane fade show " id="register" role="tabpanel" aria-labelledby="register-tab">
                <div class="col-12 col-md-8 offset-md-2">
                    <form action="/User/Register" method="post" class="form-container form-row" enctype="multipart/form-data">

                      
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">First Name</label>
                                <input class="form-control" required type="text" name="FirstName" value="" />
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Middle Name</label>
                                <input class="form-control" type="text" name="MiddleName" value="" />
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Last Name</label>
                                <input class="form-control" required type="text" name="LastName" value="" />
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Birth Day</label>
                                <input class="form-control" required type="date" name="BirthDay" value="" />
                            </div>


                        </div>
                        <div class="col-12 col-md-6">

                            <div class="form-group">
                                <label class="col-form-label">E-Mail</label>
                                <input class="form-control" required type="email" name="Email" value="" />
                            </div>

                            <div class="form-group">
                                <label class="col-form-label">Password</label>
                                <input class="form-control" required type="password" name="Password" value="" />
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Password Again</label>
                                <input class="form-control" required type="password" name="PasswordAgain" value="" />
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Profile Picture</label>
                                <input class="form-control" type="file" name="ProfilePic" value="" />
                            </div>


                        </div>
                        <div class="form-group col-12">

                            <input class="btn btn-success col-12" type="submit" value="Register" />
                        </div>
                    </form>
                </div>
                <div class="login-social-media border pl-4 pr-4 pb-4 pt-0 rounded">
                    <div class="mb-4 d-block text-center">
                        <b class="bg-white pl-2 pr-2 mt-3 d-block">Login or Sign in with</b>
                       
                    </div>
                    <form class="row">
                        <div class="col-sm-6">
                            <a class="btn facebook-bg social-bg-hover d-block mb-3" href="#"><span><i class="fab fa-facebook-f"></i>Login with Facebook</span></a>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn twitter-bg social-bg-hover d-block mb-3" href="#"><span><i class="fab fa-twitter"></i>Login with Twitter</span></a>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn google-bg social-bg-hover d-block mb-3 mb-sm-0" href="#"><span><i class="fab fa-google"></i>Login with Google</span></a>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn linkedin-bg social-bg-hover d-block" href="#"><span><i class="fab fa-linkedin-in"></i>Login with Linkedin</span></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>















